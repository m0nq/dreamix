<div class="col-lg-12 text-center">

  <div class="page-header">
    <h1 class="philosopher-heading">Dreamix</h1>
  </div>
  <p>Login</p>
  <div class="login">
    <%= form_tag(action: 'attempt_login') do %>
      <%= text_field_tag :email, nil, placeholder: "Email..." %><br>
      <%= password_field_tag(:password, nil, placeholder: "Password...(¬_¬)") %><br>
      <%= submit_tag("Log In", class: "btn btn-default btn-sm") %>
    <% end %>
  </div>
  <br>
  <p>Or, Enter your invite code to sign up.</p>
  <%= link_to "Invite Code", "#" %>
</div>
